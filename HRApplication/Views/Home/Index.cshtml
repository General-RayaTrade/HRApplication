@{
    Layout = null;
    var dir = Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr";
}


<!DOCTYPE html>
<html lang="en" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRApplication.styles.css" asp-append-version="true" />

    <!-- Font Icon -->
    <link href="~/fonts/material-icon/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/vendor/boostrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/acc-wizard-master/release/acc-wizard.min.css" rel="stylesheet" />

    <!-- Main css -->
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.4/dist/sweetalert2.all.min.js"></script>
    <style>
        .swal2-popup{
            font-size:14px !important;
        }
    </style>
    @*@if (dir == "rtl")
    {
        <style>
            body {
                font-size: 1.9rem;
            }
        </style>
    }*@
</head>
<body>
    <div class="main">
        
        <div class="container">
            <div class="acc-wizard">
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default active">
                        <div class="panel-heading" id="headingOne">
                            <h3 class="d-flex justify-content-between">
                                <a href="#collapseOne" data-toggle="collapse" data-parent="#accordion">@localizer["Personal infomation"]</a>
                                <partial name="_Culture"></partial>
                            </h3>
                        </div>

                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <partial name="partials/_personalinfo" />
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading" id="headingTwo">
                            <h3>
                                <a href="#collapseTwo" data-toggle="collapse" data-parent="#accordion">@localizer["Education and Training"]</a>
                            </h3>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse">
                            <div class="panel-body">
                                <partial name="partials/_Education" />
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading" id="headingLang">
                            <h3>
                                <a href="#collapseLang" data-toggle="collapse" data-parent="#accordion">@localizer["Language Skills"]</a>
                            </h3>
                        </div>
                        <div id="collapseLang" class="panel-collapse collapse">
                            <div class="panel-body">
                                <partial name="partials/_LanguageSkills" />
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading" id="headingEmpLoyer">
                            <h3>
                                <a href="#collapseEmpLoyer" data-toggle="collapse" data-parent="#accordion">@localizer["Work Experience"]</a>
                            </h3>
                        </div>
                        <div id="collapseEmpLoyer" class="panel-collapse collapse">
                            <div class="panel-body">
                                <partial name="partials/_EmpLoyer" />
                            </div>
                        </div>
                    </div> 
                    <div class="panel panel-default">
                            <div class="panel-heading" id="headingAddintionalInfo">
                            <h3>
                                <a href="#collapseAddintionalInfo" data-toggle="collapse" data-parent="#accordion">@localizer["Additional Information"]</a>
                            </h3>
                        </div>
                            <div id="collapseAddintionalInfo" class="panel-collapse collapse">
                            <div class="panel-body">
                                @*<partial name="partials/_EmpLoyer" />*@
                                <partial name="partials/_AddintionalInfo"  />
                            </div>
                        </div>
                    </div>

                   @* <div class="panel panel-default">
                        <div class="panel-heading" id="headingAddintionalInf">
                            <h3>
                                <a href="#collapseAddintionalInf" data-toggle="panel-collapse" data-parent="#accordion">Additional Information</a>
                            </h3>
                        </div>
                        <div id="collapseAddintionalInf" class="panel-collapse collapse">
                            <div class="panel-body">
                            </div>
                        </div>
                    </div>*@
                </div>
            </div>
        </div>
       
      

    </div>

    <!-- JS -->
   
    <script src="~/vendor/boostrap/bootstrap.min.js"></script>
    <script src="~/vendor/acc-wizard-master/release/acc-wizard.min.js"></script>
    <script src="~/vendor/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/vendor/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/vendor/jquery-steps/jquery.steps.min.js"></script>
    <script src="~/vendor/minimalist-picker/dobpicker.js"></script>
    <script src="~/js/main.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        let experiences = [];
        let Languages = [];
        $(function () {

            window.location.replace(window.location.origin.concat("/HR/#collapseOne"));
        });
    </script>
</body>
</html>
