

<form method="post">
    <fieldset>
        <div class="d-flex w-100 justify-content-end">
            <button type="button" id="addMore" class=" btn btn-primary" style="background-color:#0011f6">+ @localizer["Add more Languages +"]</button>
        </div>
        <div>
            <p>Arabic</p>

            <div class="form-row">

                <div class="form-group">
                    <label for="arabicSpoken" class="form-label">Spoken</label>
                    <select disabled name="arabicSpoken" id="arabicSpoken" class="form-control">
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                    </select>

                </div>
                <div class="form-group">
                    <label for="arabicWritten" class="form-label">Written</label>
                    <select disabled name="arabicWritten" id="arabicWritten" class="form-control">
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                    </select>

                </div>
                <div class="form-group">
                    <label for="arabicUnderstanding" class="form-label">Understanding</label>
                    <select disabled name="arabicUnderstanding" id="arabicUnderstanding" class="form-control">
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                    </select>

                </div>

            </div>
        </div>
        <hr />
        <div>
            <p>English</p>

            <div class="form-row">

                <div class="form-group">
                    <label for="englishSpoken" class="form-label">Spoken</label>
                    <select disabled name="englishSpoken" id="englishSpoken" class="form-control">
                   <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                    </select>

                </div>
                <div class="form-group">
                    <label for="englishWritten" class="form-label">Written</label>
                    <select disabled name="englishWritten" id="englishWritten" class="form-control">
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                    </select>

                </div>
                <div class="form-group">
                    <label for="englishUnderstanding" class="form-label">Understanding</label>
                    <select disabled name="englishUnderstanding" id="englishUnderstanding" class="form-control">
                        <option value="Excellent">Excellent</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                    </select>

                </div>

            </div>
        </div>

    </fieldset>
    <button type="button" id="btnLang" class="ml-3 btn btn-primary" style="background-color:#0011f6;margin-left:10px">Next</button>

</form>

<script>
    $(function () {

       
        $("#btnLang").click(function () {

            window.location.replace(window.location.href.toString().split(window.location.hash)[0].concat("#collapseEmpLoyer"))

            //window.location.replace(window.location.origin.concat("#collapseEmpLoyer"));
           
        });
    });

</script>