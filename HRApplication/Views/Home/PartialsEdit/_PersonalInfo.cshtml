
<form id="personalInfoFrom" >
    <fieldset>
        <div class="form-row">
            <div class="form-group">
                <label for="first_name" class="form-label">@localizer["Name"]</label>
                <input type="text" name="Name" required id="name" placeholder="@localizer["E.g."] @localizer["Ahmed"]" />
            </div>

            <div class="form-group">
                <label for="address" class="form-label">@localizer["Address"]</label>
                <input type="text" required name="address" id="address" placeholder="@localizer["Egypt, Cairo, 6 October"]" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="phone" class="form-label">@localizer["Phone Number"]</label>
                <input type="number" required pattern="^01[0125][0-9]{8}$" name="phone" id="phone" placeholder="(+ 123 ) 456 789" />
            </div>
            <div class="form-group">
                <label for="email" class="form-label">@localizer["Your Email"]</label>
                <input type="email" required name="email" id="email" placeholder="@localizer["E.g."] john123@gmail.com" />
            </div>

        </div>

        <div class="form-row">
            <div class="form-group-flex">
                <div class="form-radio">
                    <label for="gender">@localizer["Gender"]</label>
                    <div class="form-flex">
                        <input type="radio" name="gender" value="male" id="male" checked="checked" />
                        <label for="male"><img src="images/icon-male.png" id="maleimg" alt="Male"></label>

                        <input type="radio" name="gender" value="female" id="female" />
                        <label for="female"><img src="images/icon-female.png" id="femaleimg" alt="Female"></label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="birth_date" class="form-label">@localizer["Date of birth"]</label>
                    <input type="date" name="birth_date" id="birth_date" required />
                </div>
            </div>

            <div class="form-group">
                <label for="nationality" class="form-label">@localizer["Nationality"]</label>
                <input type="text" required name="nationality" id="nationality" placeholder="@localizer["Egyptian"]" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label for="Military" class="form-label">@localizer["Military Status"]</label>
                <input type="text" name="Military" required id="Military" placeholder="@localizer["E.g."] @localizer["Exempted"]" />
            </div>
            <div class="form-group ">
                <label>@localizer["Marital Status"]</label>
                <div class="d-flex align-items-center">
                    <input type="text" name="marital" required id="marital" placeholder="@localizer["E.g."] @localizer["Single"]" />
                </div>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group w-100">
                <label for="appliedPosition" class="form-label">@localizer["Position Applied for"]</label>
                <input type="text" required name="appliedPosition" id="appliedPosition" placeholder="@localizer["E.g."] @localizer["Software Engineer"]" />
            </div>


        </div>


        <button type="button" id="btnPresonalInfo" class="ml-3 btn btn-primary" style="background-color:#0011f6;margin-left:10px">@localizer["Next"]</button>

    </fieldset>
</form>

<script>
    $(function () {

        $("#personalInfoFrom").validate({
            messages: {

                phone: {
                    pattern: "Please enter valid Mobile Number"
                },
            },
            errorClass: "validationError"
        });

        $('.maleimg').focus(function () {
            $("#male").prop("checked", true);
        });
        $('.femaleimg').focus(function () {
            $("#female").prop("checked", true);
        });

        $("#btnPresonalInfo").click(function () {

            if ($("#personalInfoFrom").valid()) {

                window.location.replace(window.location.origin.concat("#collapseTwo"));
            }
        });
    });
   
</script>